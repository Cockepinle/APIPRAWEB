@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
    // Устанавливаем значения по умолчанию, если Model null
    var errorMessage = Model?.ErrorMessage ?? "Произошла неизвестная ошибка";
    var showRequestId = Model?.ShowRequestId ?? false;
    var requestId = Model?.RequestId;
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="text-danger">Ошибка</h1>
        <h2 class="text-danger">@errorMessage</h2>
    </div>

    @if (showRequestId)
    {
        <div class="request-id">
            <p>
                <strong>Request ID:</strong> <code>@requestId</code>
            </p>
        </div>
    }

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-primary">Вернуться назад</a>
        <a href="/" class="btn btn-secondary">На главную</a>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .alert {
        padding: 20px;
        border-radius: 5px;
    }

    .request-id {
        margin-top: 20px;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 3px;
    }
</style>